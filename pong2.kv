<PongBall>:
    size: 35, 35 
    canvas:
        Color:
            rgba: .5, .5, .9, .9        
        Ellipse:
            pos: self.pos
            size: self.size


<PongPaddle>:
    size: 30, 200
    canvas:      
        Rectangle:
            pos:self.pos
            size:self.size


<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    lbl1: player1lbl
    lbl2: player2lbl
    
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 2, self.height
        Line:
            width: 3
            circle: (self.center_x, self.center_y, min(self.width, self.height)/ 5, 0, 360)
    
    Label:
        id: player1lbl
        font_size: 30  
        center_x: root.width / 4
        top: root.top - root.top * 0.05
        text: "Player 1"
        color: (.1, .1, .9,.9)

    Label:
        font_size: 50  
        center_x: root.width / 4
        top: root.top - root.top * 0.1
        text: str(root.player1.score)
        color: (.1, .1, .9,.9)

    Label:
        font_size: 50  
        center_x: root.width * 3 / 4
        top: root.top - root.top * 0.1
        text: str(root.player2.score)
        color: (.9, .1, .1,.9)

    Label:
        id: player2lbl
        font_size: 30  
        center_x: root.width * 3 / 4
        top: root.top - root.top * 0.05
        text: "Player 2"
        color: (.9, .1, .1,.9)
    
    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle: 
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y
        